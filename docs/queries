
// customer queries
SELECT customers.id AS customers_id, customers.name AS customers_name, customers.email AS customers_email, customers.gender AS customers_gender, customers.age AS customers_age, customers.category AS customers_category, customers.date_created AS customers_date_created
FROM customers

